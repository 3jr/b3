<Window x:Class="BallOnTiltablePlate.JanRapp.JanRapp.MainApp.GeneralSettingsUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="clr-namespace:BallOnTiltablePlate.JanRapp.Controls"
        Title="General Settings"
        Width="393"
        Height="336">
    <Grid>
        <my:DoubleBox x:Name="PlateSize"
                      Height="24"
                      Margin="12,12,0,0"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      Text="Width and Length of Plate (in Meters): "
                      ValueChanged="LegthOfPlate_ValueChanged" 
                      Minimum=".01"
                      LargeChange=".1"
                      SmallChange=".01"
                      Value="{Binding GlobalSettings, Path=PlateSize}"/>
    </Grid>
</Window>
